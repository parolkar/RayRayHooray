<div class="pb-8">
  <%= heading text: "General", id: "theme", tag: "h3", class: "font-semibold text-xl mb-3" %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <div>
      <%= f.label :application_name, class: "rui-form-label" %>
      <%= f.text_field :application_name, class: "rui-form-input w-full", placeholder: "Rails UI" %>
      <div class="prose-sm prose-neutral dark:prose-invert mt-2 opacity-75">
        <p>Only used for presentational purposes.</p>
      </div>
    </div>

    <div>
      <%= f.label :support_email, class: "rui-form-label" %>
      <%= f.text_field :support_email, class: "rui-form-input w-full", placeholder: "support@example.com" %>
      <div class="prose-sm prose-neutral dark:prose-invert mt-2 opacity-75">
        <p>Used in mailers and pages.</p>
      </div>
    </div>
  </div>
</div>
